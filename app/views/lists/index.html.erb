<h1>Available Lists</h1>

<div class = 'section'>
  <% @lists.each do |list| %>
    <h1><%= link_to list.title, list %></h1>
    <ul>
      <% list.steps.each do |step|%>
      <li>Step <%= step.item %>: <%= link_to step.title %></li>
      <% end %>
    </ul>
    <%= link_to 'Edit', edit_list_path(list) %>
    <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  <%= link_to 'New List', new_list_path %>
</div>


